
{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "*"
      ]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
